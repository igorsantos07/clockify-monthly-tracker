{
  "hosting": {
    "public": "build",
    "ignore": [
      "*.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "singleProjectMode": true,
    "auth": {
      "port": 34732
    },
    "hosting": {
      "port": 34734
    },
    "firestore": {
      "port": 34737
    },
    "ui": {
      "enabled": true,
      "port": 34738
    }
  },
  "firestore": {
    "rules": ".firebase/firestore.rules",
    "indexes": ".firebase/firestore-indexes.json"
  }
}
